doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title soop_chat_controle
    style.
      body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
      }

      .red{
        color:red;
      }
      .blue{
        color:blue
      }

      .container {
        display: flex;
        height: 100vh;
      }

      .sidebar {
        width: 30%;
        overflow-y: auto;
        border-right: 1px solid #ccc;
        padding: 20px;
        height: 100vh; /* sidebar의 높이를 화면 전체 높이로 설정 */
      }

      .sidebar ul {
        list-style: none;
        padding: 0;
      }

      .room-item {
        padding: 10px;
        border-bottom: 1px solid #ccc;
        cursor: pointer;
      }

      .room-item:hover {
        background-color: #ddd;
      }

      #content {
        width: 70%;
        padding: 20px;
        overflow-y: auto;
        height: 100vh;
        display: flex;
        flex-direction: column;
        position: relative; /* 부모로부터의 상대적 위치 설정 */
      }

      .message-list {
        list-style: none;
        padding: 0;
        flex: 1; /* ul이 나머지 공간을 모두 차지하도록 설정 */
        overflow-y: auto; /* ul 스크롤 가능하게 설정 */
        margin-bottom: 20px; /* 아래 여백 추가 */
      }

      .message-list li {
        padding: 10px;
        border-bottom: 1px solid #ccc;
      }

      #msg {
        display: flex;
        align-items: center; /* 세로 중앙 정렬 */
        margin-top: auto; /* 아래로 붙이기 */
      }

      #msg input[type="text"] {
        flex: 1; /* 인풋 창이 가능한 공간 모두 차지 */
        padding: 10px;
        font-size: 16px;
      }

      #msg button {
        padding: 10px 20px;
        font-size: 16px;
        background-color: #007bff;
        color: white;
        border: none;
        cursor: pointer;
        margin-left: 10px; /* 버튼 간격 추가 */
      }

      #msg button:hover {
        background-color: #0056b3;
      }

  body 
    header
      h1 Chat
    main 
      div#welcome.container
        div.sidebar
          h4 Open Rooms:
          form#add-room-form
            input(placeholder="Room name", type="text", required)
            button#add-room-submit(type="button") Add Room
          ul#room-list.room-list
        div#content.main-content

  script(src='/public/js/index.js')
